{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true, 
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "./dist", 
    "paths": {
      "@/*": ["src/*"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
